<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3"><h1>Restaurants</h1>

    <%= link_to 'Add Restaurant', new_restaurant_path, class: "btn btn-primary"%>



      <% @restaurants.each do |restaurant| %>
        <h2><%= restaurant.name %></h2>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.phone_number %></p>
        <p><%= restaurant.category %></p>
        <p>***</p>


      <%= link_to "Edit", edit_restaurant_path(restaurant), class: "btn btn-primary" %>
      <%= link_to "Read more", restaurant_path(restaurant), class: "btn btn-primary"  %>

      <% end %>
    </div>
  </div>
</div>
